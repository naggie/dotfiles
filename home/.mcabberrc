set event_log_files = 1
set events_command = ~/bin/mcabber-msg-tmux
set autoaway = 600

set ssl_ignore_checks = 1

color roster * * white
color roster of * green
color roster a_ * red
color roster d * yellow

color muc * on

set event_log_files = 1

# makes frill angry. Leaves processes hanging. disable for now.
