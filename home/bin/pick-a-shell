#!/bin/bash

# This script will find the best shell it can and load it

if [ -x /usr/local/bin/fish ] && /usr/local/bin/fish -v 2>&1 | grep -q 'version 2'; then
	/usr/local/bin/fish
elif [ -x /usr/bin/fish ] && /usr/local/bin/fish -v 2>&1 | grep -q 'version 2'; then
	/usr/bin/fish
else
	/bin/bash
fi
