[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
	ui = auto
[core]
	excludesfile = ~/.gitignore_global
	attributesfile = /home/naggie/.gitattributes_global
[help]
	autocorrect = 1
[include]
	path = ~/.gitconfig.local
[alias]
    # execute command in git root: eg git exec make
	exec = "!exec "
    # only files in HEAD
	purge = !/bin/bash -c \"git reset --hard HEAD && git clean -dffx && git submodule update --init\"
	tpush = push
	tpull = pull
	pus = push
	pul = pull
    # do not sign stash -- pointless and slow
	stashq = -c commit.gpgsign=false stash
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
[push]
	default = current
[pull]
	default = current
	rebase = false
[gpg]
    program = gpg2
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
# see https://jnavila.github.io/plotkicadsch/
[filter "kicad_project"]
	clean = sed -E 's/^update=.*update=Date/'
	smudge = cat
[filter "kicad_sch"]
	clean = "sed -E 's/#(PWR|FLG)[0-9]+/#\\1?/'"
	smudge = cat
