#!/bin/sh

# clear screen
echo -ne  "\033c"

# red
echo -ne "\033[31m"

# ascii art hostname
hostname -s | tr a-z A-Z | figlet

# reset colours
echo -ne "\033[0m"

echo -n " ...powered by "

# white
echo -ne "\033[37m"

# domain name
hostname -d | tr a-z A-Z
echo

# reset colours
echo -ne "\033[0m"
