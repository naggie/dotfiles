#!/bin/bash

# clear screen
echo -ne  "\033c"

# red
echo -ne "\033[37m"

# ascii art hostname
hostname -s | tr a-z A-Z | figlet

# reset colours
echo -ne "\033[0m"

if [ -r /etc/quotes ]; then
	echo -n '...'
	cat /etc/quotes | sort -R | tail -n 1 | tr a-z A-Z
	echo
fi


echo -n "Powered by "

# white
echo -ne "\033[37m"

# domain name
hostname -d | tr a-z A-Z
echo

# reset colours
echo -ne "\033[0m"
